/**index.wxss**/
/*背景动画部分*/
@keyframes animatedBackground {
  from { background-position: 0 0; }
  to { background-position: 100% 0; }
}
.backgroundv { 
  width: 750rpx; 
  background-image: url('http://old.bz55.com/uploads/allimg/140820/138-140R0142240.jpg');
  background-position: 0px 0px;
  background-repeat: repeat-x;
  animation: animatedBackground 40s linear infinite;
  background-size:cover;
  -webkit-background-size: cover;
  -o-background-size: cover;
}
/*标题部分*/
.title{
  width: 100%;
  height: 200rpx;
  font-size: 100rpx;
  font-weight: 600;
  padding: 50rpx;
  color: #fff;
}
/*简介部分*/
.infotxt{
  width: 80%;
  height: 50rpx;
  font-size: 35rpx;
  color: #fff;
  line-height: 50rpx;
  padding-left: 40rpx;
}
/*按钮*/
.btnview{
  width: 30%;
  height: 80rpx;
  border-radius:40rpx;
  margin: 0  35%;
  background-color: #fff;
  text-align: center;
  line-height: 80rpx;
  font-size: 30rpx;
  position: fixed;
  bottom: 150rpx;
  left: 0;
}
/*LOGO部分*/
.logoview{
  width: 100%;
  height: 50rpx;
  margin: 50rpx 0;
